<!-- Masthead-->
@{
    var txt = "";
    if (DateTime.Now.Hour > 12)
    { txt = "Evening"; }
    else
    { txt = "Morning"; }
}

<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">About the Author</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">Good @txt the date today is @DateTime.Now.DayOfWeek , @DateTime.Now.Day, @DateTime.Now.Month.</p>
            </div>
        </div>
    </div>
</header>
