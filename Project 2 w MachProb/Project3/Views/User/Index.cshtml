@{
    int num1 = 20;
    int num2 = 20;

    int total = num1 + num2;
    int product = num1 * num2;
    int diff = num1 - num2;
    int quo = num1 / num2;
    int mod = num1 % num2;

    var name = "Jasper Lindell Arangali";
    DateTime Birthday = DateTime.Parse("05/22/2003");
    var gender = "Male";

    var age = DateTime.Now.Subtract(Birthday).Days / 365;
}


<h2> Welcome Student View <br/> </h2>

<h2> I am @{
    if (gender == "Male"){
        <p>Mr. </p> }
else {<p>Ms. </p> }
    } @name and I am @age yrs old. <br />
    @Birthday</h2>

<table class="table table-dark">
    <tr>
        <td>Sum</td>
